{% extends 'base.jinja2' %}

{% block subtitle %}Edit {{ context }} - {% endblock subtitle %}

{% block content %}
  <link rel="stylesheet"
        href="{{ request.static_url('deform:static/css/form.css') }}"
        type="text/css"/>

  {% for reqt in reqts['css'] %}
    <link rel="stylesheet" type="text/css" href="{{ request.static_url(reqt) }}"/>
  {% endfor %}

  {% for reqt in reqts['js'] %}
    <script src="{{ request.static_url(reqt) }}"></script>
  {% endfor %}

  <h1>Edit {{ context }}</h1>

  {{ form|safe }}

  <script>
      deform.load();
  </script>

{% endblock content %}